__global__ void Montecarlo(float* ptrGMResultat, int nbSlice)
    {
    extern __shared__ float tabSM[];
    reductionIntraThread(tabSM, nbSlice);
    __syncthreads();
    reductionADD<float>(tabSM, ptrGMResultat);
    }


